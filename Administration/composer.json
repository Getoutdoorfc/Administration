{
  "name": "getoutdoor/administration",
  "description": "A WordPress plugin for integrating Microsoft services and calendar management.",
  "type": "project",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Sune E.",
      "email": "sune@example.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=8.1",
    "microsoft/microsoft-graph": "^2.0",
    "symfony/polyfill-php82": "^1.31"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "wp-coding-standards/wpcs": "^3.0",
    "squizlabs/php_codesniffer": "^3.7",
    "phpunit/phpunit": "^10.0",
    "icanhazstring/composer-unused": "^0.8",
    "rector/rector": "^1.2.10",
    "symplify/rule-doc-generator-contracts": "^11.0"
  },
  "autoload": {
    "psr-4": {
      "Administration\\Core\\": "Core/",
      "Administration\\Includes\\": "Includes/",
      "Administration\\Modules\\": "Modules/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Administration\\Tests\\": "tests/",
      "Administration\\MyRectorFiles\\MyRectorTailorMadeFuncs\\": "MyRectorFiles/MyRectorTailorMadeFuncs/"
    }
  },
  "scripts": {
    "post-update-cmd": [
      "composer dump-autoload -o"
    ],
    "phpcs": "vendor/bin/phpcs",
    "phpstan": "vendor/bin/phpstan analyse",
    "phpunit": "vendor/bin/phpunit",
    "test": [
      "@phpcs",
      "@phpstan",
      "@phpunit"
    ],
    "rector": "vendor/bin/rector process --config=MyRectorFiles/rector.php",
    "rectordry": "vendor/bin/rector process --dry-run --config=MyRectorFiles/rector.php"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "php-http/discovery": true,
      "tbachert/spi": true
    }
  }
}
