{
  "name": "getoutdoor/administration",
  "description": "A WordPress plugin for integrating Microsoft services and calendar management.",
  "type": "project",
  "license": "GPL-2.0",
  "authors": [
    {
      "name": "Sune E.",
      "email": "sune@example.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=8.1",
    "symfony/polyfill-ctype": "^1.31"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "wp-coding-standards/wpcs": "^3.0",
    "squizlabs/php_codesniffer": "^3.7",
    "phpunit/phpunit": "^10.0",
    "icanhazstring/composer-unused": "^0.8"
  },
  "autoload": {
    "psr-4": {
      "Administration\\Includes\\": "Includes/",
      "Administration\\Components\\": "Components/",
      "Administration\\Utilities\\": "Utilities/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Administration\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-update-cmd": [
      "composer dump-autoload -o"
    ],
    "phpcs": "vendor/bin/phpcs",
    "phpstan": "vendor/bin/phpstan analyse",
    "phpunit": "vendor/bin/phpunit",
    "test": [
      "@phpcs",
      "@phpstan",
      "@phpunit"
    ]
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
